//Target Android SDK level. An SDK level lower than this is considered low spec
#macro LOW_SPEC_ANDROID_TARGET_SDK  26

//Target maximum texture size as reported by OpenGL. A maximum texture size lower than this is considered low spec
#macro LOW_SPEC_ANDROID_TEXTURE_SIZE_TARGET  8192

//Target system RAM, for Android. System memory lower than this is considered low spec
#macro LOW_SPEC_ANDROID_TARGET_RAM_GB  4.1

//Target system RAM, for iOS. System memory lower than this is considered low spec
#macro LOW_SPEC_IOS_TARGET_RAM_GB  2.1

//Whether tvOS should be considered low spec
#macro LOW_SPEC_TVOS  true